{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    
    "strict": true,
    "noImplicitThis": true,     // must be true (vue)
    "strictNullChecks": true,   // false - old style - string allways nullable  
    
    "downlevelIteration": true,

    "jsx": "preserve",

    "importHelpers": true,      // import all helpers from tslib 

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    
    // "node_modules/**/*.d.ts"
  ],
  
  "exclude": [
    "node_modules"
  ]
}
